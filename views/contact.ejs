<% include ./partials/header.ejs %>

<div class="container-fluid" id="contactPage">
    <h2 id="contactTitle">
        Contact Form <i class="fas fa-envelope-open fa-fw"></i>
    </h2>
    <!-- Formspree API and Bootstrap Styling -->
   <form id="fs-frm" name="simple-contact-form" accept-charset="utf-8" action="https://formspree.io/mail.aryansoni@gmail.com" method="post">
        <!-- All inputs required -->
        <fieldset id="fs-frm-inputs">
            <div class="form-group">
                <label for="full-name">Name</label>
                <input type="text" name="name" class="form-control" id="full-name" placeholder="John Smith" required="required">
            </div>
            <div class="form-group">
                <label for="email-address">Email Address</label>
                <input type="email" name="_replyto" class="form-control" id="email-address" placeholder="email@domain.tld" required="required">
            </div>
            <div class="form-group">
                <label for="message">Message</label>
                <textarea  name="message" class="md-textarea form-control" id="message" placeholder="Message goes here..." required="required"></textarea>
            </div>
            <input type="hidden" name="_subject" id="email-subject" value="Contact Form Submission">
        </fieldset>
        <button type="submit" class="btn" id="hover">
            <span>
                Send!
                <i class="far fa-paper-plane"> </i>
            </span>
        </button> 
    </form>
</div>

<% include ./partials/footer.ejs %>